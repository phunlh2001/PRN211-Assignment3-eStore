@model IEnumerable<BusinessObject.Objects.Member>
@{
    ViewData["Title"] = "Members";
}

<h2 class="text-center">Members information</h2>
<hr />
<table class="table">
    <thead class="table thead-light table-bordered">
        <tr>
            <th scope="col">Email</th>
            <th scope="col">Company</th>
            <th scope="col">City</th>
            <th scope="col">Country</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Email == "admin@VM.com") {
                continue;
            }
            <tr>
                <td>@item.Email</td>
                <td>@item.CompanyName</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>
                    <a asp-controller="OrderDetail" asp-route-Id="@item.MemberId" class="btn btn-outline-info">View OrderDetail</a>
                </td>
            </tr>
        }
    </tbody>
</table>